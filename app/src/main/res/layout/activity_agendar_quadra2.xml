<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/textView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@drawable/component_home"
        android:drawableEnd="@drawable/ic_baseline_person_24"
        android:drawablePadding="30dp"
        android:padding="5dp"
        android:text="FutNow"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="4dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="186dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/fitnow" />

    <TextView
        android:id="@+id/name_Arena"
        android:layout_width="235dp"
        android:layout_height="54dp"
        android:layout_marginLeft="100dp"
        android:text="Arena Pirapora"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnHr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/red"
        android:text="17:00 PM" />

    <Button
        android:id="@+id/btnHr_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_button"
        android:text="18:00 PM" />

    <Button
        android:id="@+id/btnHr_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/red"
        android:text="19:00 PM" />

    <Button
        android:id="@+id/btnHr_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_button"
        android:text="20:00 PM" />

    <Button
        android:id="@+id/btnHr_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_button"
        android:text="21:00 PM" />

    <Button
        android:id="@+id/btnHr_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_button"
        android:text="22:00 PM" />

</LinearLayout>